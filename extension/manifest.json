{
  "manifest_version": 3,
  "name": "Tube-Code: YouTube to IDE",
  "version": "1.0",
  "description": "Extracts Python code from YouTube videos using AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite" 
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html" 
  }
}